@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout"; // Use your layout file
}

<div class="container mt-5">
    <h1 class="display-4">Admin Dashboard</h1>

    <div class="card mt-4">
        <div class="card-header">
            <h5>Quick Actions</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-primary btn-block">Manage Users</a>
                </div>
                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("ManageRoles", "Admin")" class="btn btn-success btn-block">Manage Roles</a>
                </div>

                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("ManageDepartments", "Admin")" class="btn btn-success btn-block">Manage Deppartments</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <div class="alert alert-info">
            Welcome to the administration panel. Use the links above to manage the system.
        </div>
    </div>
</div>
